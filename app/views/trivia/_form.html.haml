= form_for @trivium do |f|
  - if @trivium.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trivium.errors.count, "error")} prohibited this trivium from being saved:"
      %ul
        - @trivium.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :question
    = f.text_field :question
  .field
    = f.label :answer
    = f.text_field :answer
  .actions
    = f.submit 'Save'
